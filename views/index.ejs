<% showNav = false; %>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f8f9fa;
            font-family: 'Quicksand', sans-serif;
        }

        .login-container {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
            max-width: 900px;
            justify-content: center;
            background: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            position: relative;
        }

        .decor-image {
            position: absolute;
            bottom: 10px;
            right: 10px; /* <<< ubah dari left:50% jadi right:10px */
            z-index: 0;
            transform: none; /* <<< hapus transform */
            display: none;
        }
        .logo-sekolah {
            position: absolute;
            top: 30px;
            right: 40px; /* <<< ubah dari left:50% jadi right:10px */
            z-index: 10;
            transform: none; /* <<< hapus transform */
            /* display: none; */
        }
        .form-side {
            padding: 40px;
            flex: 1;
            text-align: left;
            position: relative; /* <<< Tambahkan ini! */
        }


        .form-side h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .form-side a {
            color: #0d6efd;
        }

        .bg-side {
            flex: 1;
            background-image: url('img/bg2.png');
            background-size: cover;
            background-position: top center;
        }

        @media (max-width: 768px) {
            .bg-side {
                display: none;
            }

            .decor-image {
                display: flex;
            }

            .form-side h1 {
                text-align: center;
            }
            .logodetail {
                display: flex;
                justify-content: center;
                align-items: center;
                text-align: center; /* Optional, if you want to center the text inside the element */
            }
        }
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container::before {
            content: '';
            position: absolute;
            width: 300px;
            height: 300px;
            background: rgba(255, 192, 203, 0.4); /* pink soft */
            border-radius: 50%;
            top: 20%;
            left: 10%;
            filter: blur(100px);
            z-index: 0;
        }

        .password-container {
            display: flex;
            align-items: center;
        }
        .bx-show {
            right: 20px;
            cursor: pointer;
            color: #555555;
            font-size: 24px;
        }
        .bx-show:hover {
            color: #8f8f8f;
        }
        
        .btn-primary {
            background-color: #4382ff;
            border-color: #4382ff;
        }
        .btn-primary:hover {
            background-color: #74beff;
            border-color: #74beff;
        }

    </style>
    <div class="container">
      <div class="login-container">
          <!-- Form Section -->
          <div class="form-side">
            <!-- add logo here -->
                  <div class="logodetail d-flex align-items-center mb-5">
                    <!-- <img src="img/shiroko.jpg" alt="Logo" class="me-2" style="height: 40px;"> -->
                    <i class='bx bxs-lock-open-alt me-1' style="font-size: 24px;"></i>
                    <h1 class="mb-0">Masuk</h1>
                  </div>
                  <form method="POST" action="/login">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username">
                    </div>
                    <div class="mb-3 position-relative">
                        <label for="password" class="form-label">Password</label>
                        <div class="password-container">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
                            <!-- <box-icon name='show' id="togglePassword" class="position-absolute show-icon"></box-icon> -->
                            <i class='bx bx-show position-absolute' id="togglePassword" ></i>
                        </div>
                    </div>
                  <button type="submit" class="mt-3 btn btn-primary w-100">Masuk</button>
              </form>
              <% if (error) { %>
                <div class="alert alert-danger mt-3">
                  <%= error %>
                </div>
              <% } %>              
                <!-- <div class="mt-5">
                  <a href="#">Forgot password?</a>
                </div>
                <div class="mt-2">
                    <p>Don't have an account? <a href="#">Register here</a></p>
                </div> -->
                <div class="mt-5">
                    <a href="scan" style="text-decoration: none;">Scan RFID</a>
                </div>
                <!-- Decoration -->
                <div class="decor-image">
                    <img src="img/blue-archive-shiroko.gif" alt="Decoration" style="width: 120px;">
                </div>
                <!-- Logo Sekolah -->
                <div class="logo-sekolah">
                    <img src="img/logo_sekolah.png" alt="Decoration" style="width: 60px;">
                </div>
          </div>
      
        <!-- Background Section -->
        <div class="bg-side"></div>
      </div>
    </div>
    <script>
        const passwordInput = document.getElementById('password');
        const togglePassword = document.getElementById('togglePassword');
      
        togglePassword.addEventListener('mousedown', function () {
          passwordInput.type = 'text';
        });
      
        togglePassword.addEventListener('mouseup', function () {
          passwordInput.type = 'password';
        });
      
        togglePassword.addEventListener('mouseout', function () {
          passwordInput.type = 'password';
        });
      </script>